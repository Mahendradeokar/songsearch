{
  "compilerOptions": {
    /* File Layout */
    "outDir": "./dist",
    /* Environment (Node ESM) */
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "esnext",
    "lib": [
      "esnext"
    ],
    "types": [
      "node"
    ],
    /* Output */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    /* Type Checking */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    /* Style / Build Safety */
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "skipLibCheck": true,
    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      "@src/*": [
        "./src/*"
      ],
      "@shared-types": [
        "../shared-types/index.ts"
      ]
    }
  },
  "include": [
    "./src",
    "../shared-types"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}